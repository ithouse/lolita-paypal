<html>
<head>
    <%= javascript_include_tag "jquery-1.4.1.min" %>
</head>
<body>
<%= image_tag "ajax-loader3.gif" %>
<form method="POST" name="paypal_form" action="<%= ActiveMerchant::Billing::Integrations::Paypal.service_url %>">
    <input type="hidden" name="cmd" value="_s-xclick" />
    <input type="hidden" name="encrypted" value="<%= encrypted_basic(@payment_request) %>" />
    <input type="image" id="submit_button" src="/images/ajax-loader3.gif" name="submit" alt="Submit"  style="display:none;"/>
</form>
<br />
<script type="text/javascript">
$(function(){ $('#submit_button').trigger('click') });
</script>
</body>
</html>
